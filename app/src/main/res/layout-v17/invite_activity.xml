<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:textColorPrimary="@color/colorAccent"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:background="@color/black"
        android:weightSum="1">

        <TextView
            android:text="TIME:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:id="@+id/time_txt"
            android:layout_below="@+id/Loc_txt"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="20sp"
            android:textColor="@android:color/background_light"
            android:textStyle="normal|bold" />

        <TextView
            android:text="GRUV:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/gruv_txt"
            android:fontFamily="sans-serif"
            android:textSize="20sp"
            android:textColor="@android:color/background_light"
            android:layout_below="@+id/time_txt"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="normal|bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:layout_below="@+id/loc_edt"
            android:id="@+id/time_edt"
            android:text="XXX"
            android:textSize="18sp"
            android:textColor="?android:attr/colorForegroundInverse"
            android:layout_alignBaseline="@+id/time_txt"
            android:layout_alignBottom="@+id/time_txt"
            android:layout_toEndOf="@+id/Loc_txt"
            android:layout_toRightOf="@+id/Loc_txt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=" 2O3K9"
            android:ems="10"
            android:id="@+id/codeDisplay_txt"
            android:textSize="25sp"
            android:textColor="@color/pink"
            android:layout_alignBaseline="@+id/code_txt"
            android:layout_alignBottom="@+id/code_txt"
            android:layout_toRightOf="@+id/code_txt"
            android:layout_alignRight="@+id/invite_txt"
            android:layout_alignEnd="@+id/invite_txt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCHEDULED"
            android:textColor="#FFFFFF"
            android:id="@+id/textView"
            android:textSize="25sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loc_edt"
            android:textSize="18sp"
            android:textColor="?android:attr/colorForegroundInverse"
            android:text="XXX"
            android:layout_alignTop="@+id/Loc_txt"
            android:layout_alignLeft="@+id/time_edt"
            android:layout_alignStart="@+id/time_edt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="XXX"
            android:ems="10"
            android:id="@+id/gruv_edt"
            android:textSize="22sp"
            android:textColor="?android:attr/colorForegroundInverse"
            android:layout_alignBaseline="@+id/gruv_txt"
            android:layout_alignBottom="@+id/gruv_txt"
            android:layout_alignLeft="@+id/time_edt"
            android:layout_alignStart="@+id/time_edt" />

        <TextView
            android:text="CODE:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/code_txt"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="25sp"
            android:layout_marginBottom="38dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/invite_txt"
            android:layout_alignStart="@+id/invite_txt" />

        <TextView
            android:text="LOCATION:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:id="@+id/Loc_txt"
            android:textSize="20sp"
            android:textColor="@android:color/background_light"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="normal|bold" />

        <TextView
            android:text="SHARE INVITE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/invite_txt"
            android:background="@android:color/background_dark"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="25sp"
            android:textAllCaps="false"
            android:fontFamily="sans-serif"
            android:layout_above="@+id/codeDisplay_txt"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:title="Start game"
            android:titleTextColor="@color/colorAccent"
            android:layout_height="60dp"
            android:background="@color/black"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INVITE FRIENDS"
                android:textSize="20sp"
                android:layout_marginTop="26dp"
                android:textColor="@color/colorAccent"
                android:layout_gravity="center"
                android:id="@+id/toolbar_title"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:layout_weight="1" />
        </android.support.v7.widget.Toolbar>
        <View android:layout_height="2dp"
            android:background="#FF1493"
            android:layout_width="fill_parent"
            android:id="@+id/stripBelowToolbar"/>
    </android.support.design.widget.AppBarLayout>

</android.support.design.widget.CoordinatorLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/colorPrimary"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/txteventtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_marginTop="5dp"
            android:text="Gruvin"
            android:textColor="@color/black"
            android:textSize="25sp" />


        <TextView
            android:id="@+id/txt_eventtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txteventtitle"
            android:layout_alignStart="@+id/txteventtitle"
            android:layout_below="@+id/txteventtitle"
            android:layout_gravity="center"
            android:text="xxxxx"
            android:textColor="@color/pink"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_eventdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="120dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="50dp"
            android:text="xxxxx"
            android:textColor="@color/pink"
            android:textSize="20sp" />


        <Button
            android:id="@+id/btn_invite"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/txteventtitle"
            android:layout_marginRight="10dp"
            android:text="INVITE"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_invited"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txt_eventdate"
            android:layout_alignLeft="@+id/btn_invite"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/btn_invite"
            android:layout_alignTop="@+id/txteventtitle"
            android:layout_marginRight="10dp"
            android:background="@drawable/tick"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:visibility="gone" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
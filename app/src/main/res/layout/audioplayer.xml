<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/black"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PAUSE"
        android:visibility="gone"
        android:id="@+id/btn_pause"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtcurenttime"
        android:text="0:0"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:layout_below="@+id/song_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginBottom="16dp" />

    <TextView android:text="GRUV-IN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview"
        android:textSize="35dp"
        android:textColor="@color/pink"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Song Names"
        android:textColorHint="@color/wallet_holo_blue_light"
        android:textColor="@color/wallet_holo_blue_light"
        android:id="@+id/txtsongname"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_below="@+id/textview"
        android:layout_alignLeft="@+id/song_image"
        android:layout_alignStart="@+id/song_image"
        android:layout_marginTop="18dp"
        android:layout_alignRight="@+id/song_image"
        android:layout_alignEnd="@+id/song_image" />

    <ImageView
        android:id="@+id/song_image"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:src="@drawable/logo"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btn_pause"
        android:layout_alignStart="@+id/btn_pause" />

